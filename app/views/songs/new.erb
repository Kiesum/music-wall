
<div>
<h1>Post a song</h1>
</div>


<% if @song.errors.any? %>
  <div>
    <strong>Some issues with your input, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<form method="post" action="/songs">
  <div>
      <label>Song Title:</label>
      <input type="text" name="song_title" value="<%= @song.song_title %>">
  </div>
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @song.author %>">
  </div>
  <div>
    <label>url:</label>
    <input type="text" name="url" value="<%= @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>